<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Style -->
    <style name="Widget.DuckDetector.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">24dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.DuckDetector.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_purple</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <style name="Widget.DuckDetector.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="strokeColor">@color/button_purple</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="Widget.DuckDetector.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
